{
  "name": "typescript-basic-code",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "browser:babel:build": "babel src/browser --out-dir dist/browser/babel --extensions '.ts,.tsx'",
    "browser:tsc:build": "tsc src/browser/* --outDir dist/browser/tsc",
    "node:babel:build": "babel src/node --out-dir dist/node/babel --extensions '.ts,.tsx'",
    "node:babel:run": "node dist/node/babel/main.js",
    "node:tsc:build": "tsc src/node/* --outDir dist/node/tsc",
    "node:tsc:run": "node dist/node/ts/main.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/node": "^17.0.31",
    "typescript": "^4.5.4"
  }
}
